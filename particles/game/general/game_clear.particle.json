{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "starpve:game_clear",
			"basic_render_parameters": {
				"material": "particles_add",
				"texture": "textures/particle/particles"
			}
		},
		"components": {
			"minecraft:emitter_local_space": {
				"position": true,
				"rotation": false
			},
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 500,
				"max_particles": 2000
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 2
			},
			"minecraft:emitter_shape_sphere": {
				"offset": [
					0,
					0.5,
					0
				],
				"radius": "1 + v.emitter_age * 8",
				"surface_only": true,
				"direction": "outwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(1.4, 2.4)"
			},
			"minecraft:particle_initial_spin": {
				"rotation_rate": "v.particle_random_1 > 0.5 ? 360 : -360"
			},
			"minecraft:particle_initial_speed": 8,
			"minecraft:particle_motion_dynamic": {
				"linear_drag_coefficient": "v.particle_age <= 0.5 ? 2.5 : -1.5",
				"rotation_drag_coefficient": 0.5
			},
			"minecraft:particle_appearance_billboard": {
				"size": [
					"0.16 + v.particle_random_2 * 0.04",
					"0.16 + v.particle_random_2 * 0.04"
				],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 128,
					"texture_height": 128,
					"flipbook": {
						"base_UV": [
							"8 * 7",
							"8 * 12"
						],
						"size_UV": [
							8,
							8
						],
						"step_UV": [
							-8,
							0
						],
						"max_frame": 8,
						"stretch_to_lifetime": true
					}
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_random_1",
					"gradient": {
						"0.0": "#FF005CFF",
						"1.0": "#FF000000"
					}
				}
			}
		}
	}
}
