{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "starpve:inertia.vivid.ground_sparkle",
			"basic_render_parameters": {
				"material": "particles_add",
				"texture": "textures/particle/particles"
			}
		},
		"components": {
			"minecraft:emitter_local_space": {
				"position": true,
				"rotation": false
			},
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 30,
				"max_particles": 100
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 1
			},
			"minecraft:emitter_shape_disc": {
				"offset": [0, 0.1, 0],
				"radius": "v.radius",
				"direction": ["math.random(-1, 1)", 1, "math.random(-1, 1)"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "1.0  + v.particle_random_4 * 1.6"
			},
			"minecraft:particle_initial_spin": {
				"rotation": "math.random(0, 360)",
				"rotation_rate": "(v.particle_random_4 - 0.5) * 360 * 3"
			},
			"minecraft:particle_initial_speed": "1 + v.emitter_random_1 * 3",
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": [0, -4, 0],
				"linear_drag_coefficient": 1,
				"rotation_drag_coefficient": 1
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.05 + v.particle_random_3 * 0.15", "0.05 + v.particle_random_3 * 0.15"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 128,
					"texture_height": 128,
					"flipbook": {
						"base_UV": ["8 * 1", "8 * 4"],
						"size_UV": [8, 8],
						"step_UV": [8, 0],
						"max_frame": 2,
						"stretch_to_lifetime": true
					}
				}
			},
			"minecraft:particle_motion_collision": {
				"collision_drag": 3,
				"coefficient_of_restitution": 0.2,
				"collision_radius": 0.1
			},
			"minecraft:particle_appearance_lighting": {},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#FFFFFFFF",
						"0.5": "#FFF4FFAA",
						"1.0": "#FF280E38"
					}
				}
			}
		}
	}
}
