{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "starpve:inertia.shock_bolt",
			"basic_render_parameters": {
				"material": "particles_add",
				"texture": "textures/particle/particles"
			}
		},
		"curves": {
			"variable.scale": {
				"type": "bezier_chain",
				"input": "v.particle_age",
				"nodes": {
					"1.0": {
						"value": 1,
						"slope": 0
					},
					"0.0": {
						"value": -0.03,
						"slope": 0.3
					}
				}
			}
		},
		"events": {
			"reset": {
				"expression": "v.count = 0;"
			},
			"increment": {
				"expression": "v.count = v.count + 1;"
			},
			"emission": {
				"particle_effect": {
					"effect": "starpve:inertia.shock_bolt.emission",
					"type": "emitter"
				}
			}
		},
		"components": {
			"minecraft:emitter_local_space": {
				"position": true,
				"rotation": false
			},
			"minecraft:emitter_rate_steady": {
				"spawn_rate": "(v.length / 0.2 / 0.1)",
				"max_particles": 600
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 0.1
			},
			"minecraft:emitter_lifetime_events": {
				"creation_event": "reset"
			},
			"minecraft:emitter_shape_point": {
				"offset": [
					"v.dx * (v.count * 0.2)",
					"v.dy * (v.count * 0.2)",
					"v.dz * (v.count * 0.2)"
				]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(0.5, 1.0)"
			},
			"minecraft:particle_expire_if_not_in_blocks": [
				"minecraft:air"
			],
			"minecraft:particle_lifetime_events": {
				"creation_event": "increment",
				"expiration_event": "emission"
			},
			"minecraft:particle_initial_spin": {
				"rotation": "variable.particle_random_3*360",
				"rotation_rate": "(v.particle_random_2 - 0.5) * 200"
			},
			"minecraft:particle_initial_speed": "math.random(0.5, 2)",
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": [
					"v.dx * 1",
					"v.dy * 1",
					"v.dz * 1"
				],
				"linear_drag_coefficient": 3
			},
			"minecraft:particle_appearance_billboard": {
				"size": [
					"(0.05 + v.particle_random_3 * 0.5) - (v.particle_random_3 * v.scale * 0.35)",
					"(0.05 + v.particle_random_3 * 0.5) - (v.particle_random_3 * v.scale * 0.35)"
				],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 128,
					"texture_height": 128,
					"flipbook": {
						"base_UV": [
							"8 * 1",
							"8 * 4"
						],
						"size_UV": [
							8,
							8
						],
						"step_UV": [
							8,
							0
						],
						"frames_per_second": 2,
						"max_frame": 2,
						"stretch_to_lifetime": true
					}
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#FFFFFFFF",
						"0.14": "#ffffffff",
						"0.6": "#FFFFE200",
						"1.0": "#FF6B2D87"
					}
				}
			}
		}
	}
}
