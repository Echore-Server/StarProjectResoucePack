{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "starpve:inertia.rewind",
			"basic_render_parameters": {
				"material": "particles_blend",
				"texture": "textures/particle/particles"
			}
		},
		"components": {
			"minecraft:emitter_local_space": {
				"position": true,
				"rotation": false
			},
			"minecraft:emitter_rate_instant": {
				"num_particles": 250
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 0.1
			},
			"minecraft:emitter_shape_sphere": {
				"radius": "v.radius",
				"surface_only": true,
				"direction": [
					"math.random_integer(-1, 1)",
					"math.random_integer(-1, 1)",
					"math.random_integer(-1, 1)"
				]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "0.4 + v.particle_random_4 * 0.6"
			},
			"minecraft:particle_initial_spin": {
				"rotation": "math.random(0, 360)",
				"rotation_rate": "(v.particle_random_4 - 0.5) * 360 * 3"
			},
			"minecraft:particle_initial_speed": "v.particle_random_4 * 2",
			"minecraft:particle_motion_dynamic": {
				"linear_drag_coefficient": 3,
				"rotation_drag_coefficient": 1
			},
			"minecraft:particle_appearance_billboard": {
				"size": [
					"0.05 + v.particle_random_3 * 0.1",
					"0.05 + v.particle_random_3 * 0.1"
				],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 128,
					"texture_height": 128,
					"flipbook": {
						"base_UV": [
							"8 * 1",
							"8 * 4"
						],
						"size_UV": [
							8,
							8
						],
						"step_UV": [
							8,
							0
						],
						"max_frame": 2,
						"stretch_to_lifetime": true
					}
				}
			},
			"minecraft:particle_appearance_lighting": {},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#FFFFFFFF",
						"0.19": "#FFE7FF04",
						"0.5": "#FFD0FF00",
						"1.0": "#FF280E38"
					}
				}
			}
		}
	}
}
